<div class="table-responsive d-flex justify-content-center">
  <div class="form-container">
    <%= form_for @food, url: foods_path, class: 'container-sm', local: true do |f| %>
    <div class="mb-3"><%= f.label :name, class: 'form-label' %> <%= f.text_field :name, class: 'form-control', autofocuse: true %></div>
    <div class="mb-3"><%= f.label :price, class: 'form-label' %> <%= f.text_field :price, class: 'form-control' %></div>
    <div class="mb-3"><%= f.label :measurement_unit, class: 'form-label' %> <%= f.text_field :measurement_unit, class: 'form-control' %></div>
    <%= f.submit 'Create', class: 'btn btn-primary' %> <% end %>
  </div>
</div>
