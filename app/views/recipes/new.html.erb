<div class="table-responsive d-flex justify-content-center">
  <div class="form-container">
    <%= form_for @recipe, url: recipes_path, class: 'container-sm', local: true do |f| %>
    <div class="mb-3"><%= f.label :name, class: 'form-label' %> <%= f.text_field :name, class: 'form-control', autofocuse: true %></div>
    <div class="mb-3"><%= f.label :preparation_time, class: 'form-label' %> <%= f.text_field :preparation_time, class: 'form-control' %></div>
    <div class="mb-3"><%= f.label :cooking_time, class: 'form-label' %> <%= f.text_field :cooking_time, class: 'form-control' %></div>
    <%= f.submit 'Create', class: 'btn btn-primary' %> <% end %>
  </div>
</div>
